<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../../styles/Style.css"
            prefHeight="600.0" prefWidth="1200.0">

    <top>
        <fx:include source="../../components/user/header.fxml" />
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <VBox alignment="CENTER" spacing="20">
                <Text text="Header de la page artiste" styleClass="h1" />

                <VBox alignment="CENTER" spacing="20" styleClass="conteneurProfile"
                      prefWidth="-1">
                    <Label text="Mon Profil d'artiste" styleClass="h1"/>
                    <fx:include source="../../components/profil/info.fxml"/>
                    <fx:include source="../../components/artist/musicBank.fxml"/>
                    <fx:include source="../../components/artist/subcriptionButton.fxml"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Pied de page toujours visible en bas -->
    <bottom>
        <fx:include source="../../components/music-play/music-footer.fxml" />
    </bottom>
</BorderPane>
