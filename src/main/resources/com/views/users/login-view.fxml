<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:controller="com.sw.controllers.users.ControllerLogin" xmlns:fx="http://javafx.com/fxml" prefHeight="250.0" prefWidth="400.0">
    <!-- Conteneur principal pour l'interface utilisateur. Definit le contrôleur associé à cette vue. -->
    <StackPane alignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
    <!-- VBox comme conteneur pour les éléments de connexion. Les éléments à l'intérieur seront organisés verticalement. -->
        <VBox fx:id="conteneurConnexion" spacing="10" alignment="CENTER" maxWidth="300" maxHeight="200">
            <!-- Label pour le titre de la page. Style appliqué pour augmenter la taille de la police. -->
            <Label fx:id="labelSeConnecter" text="Se Connecter" style="-fx-font-size: 20px;"/>

            <!-- Champ de texte pour saisir l'identifiant. 'promptText' fournit un texte indicatif. -->
            <TextField fx:id="textFieldPseudo" prefWidth="250" maxWidth="250" promptText="Pseudo"/>

            <!-- Champ de mot de passe pour saisir le mot de passe. 'promptText' fournit un texte indicatif. -->
            <PasswordField fx:id="passwordField" prefWidth="250" maxWidth="250" promptText="Mot de Passe"/>

            <!-- Bouton pour valider la connexion. L'action est liée à une méthode dans le contrôleur. -->
            <Button fx:id="boutonValider" text="Valider" onAction="#handleButtonAction"/>

            <!-- Label lien pour la registration page. -->
            <Label fx:id="labelRegistration" text="Je n'ai pas encore de compte" visible="true" onMouseClicked="#handleRegistrationLink"/>

            <!-- Label lien pour la mdp oublié page. -->
            <Label fx:id="labelMdpOublie" text="J'ai oublié mon mot de passe" visible="true"/>

            <!-- Label pour afficher les messages d'erreur. Initialement caché. -->
            <Label fx:id="labelErreur" text="Pseudo ou mot de passe incorrect" visible="false"/>
        </VBox>
    </StackPane>
</AnchorPane>
